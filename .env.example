### Core
ENV_NAME=local
PORT=8080
SERVICE_MODE=member

### GCP / Storage
FIRESTORE_PROJECT_ID=YOUR_FIRESTORE_PROJECT_ID
STORAGE_BUCKET=YOUR_STORAGE_BUCKET
PUBLIC_BASE_URL=https://example.com

### LINE (secrets)
LINE_CHANNEL_SECRET=YOUR_LINE_CHANNEL_SECRET
LINE_CHANNEL_ACCESS_TOKEN=YOUR_LINE_CHANNEL_ACCESS_TOKEN

### Admin / Ops (secret)
# Used by /admin/login (cookie) and by scripts (X-Admin-Token).
ADMIN_OS_TOKEN=YOUR_ADMIN_OS_TOKEN

# Required in stg/prod: confirm token for dangerous ops operations (kill switch / composer / segment send / retry queue).
# OPS_CONFIRM_TOKEN_SECRET=YOUR_OPS_CONFIRM_TOKEN_SECRET

### Track service (secret)
TRACK_TOKEN_SECRET=YOUR_TRACK_TOKEN_SECRET

### Track compatibility switch (default enabled if unset)
# TRACK_POST_CLICK_ENABLED=1

### Optional / Advanced (leave unset unless you know you need these)
# OPS_CONSOLE_CURSOR_SECRET=
# OPS_CURSOR_SIGNING_SECRET=
# OPS_CURSOR_HMAC_ALLOW_UNSIGNED=
# OPS_ASSIST_LLM_ENABLED=
# PHASE2_AUTOMATION_ENABLED=
# OPS_JOB_TOKEN=
